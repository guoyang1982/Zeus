<configuration scan="false"  scanPeriod="1 minutes"   debug="true">	<appender name="Console" class="ch.qos.logback.core.ConsoleAppender">		<encoder>			<pattern>%d{HH:mm:ss.SSS} %level [%logger{5}] - %X{traceId} %msg%n</pattern>		</encoder>	</appender>	<!--  %d{HH:mm:ss} %level [%logger{5}.%M:%L] %msg%n %file-->	<appender name="File" class="ch.qos.logback.core.rolling.RollingFileAppender">        <file>/letv/logs/mini-ecommerce/mini.log</file>		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">			<FileNamePattern>/letv/logs/mini-ecommerce/mini-%d{yyyyMMdd}.log</FileNamePattern>			<MaxHistory>365</MaxHistory>		</rollingPolicy>		<encoder>			<Pattern>%d{HH:mm:ss.SSS} %level [%logger{5}] - %X{traceId} %msg%n</Pattern>			<charset>utf-8</charset>			<!--<immediateFlush>false</immediateFlush>-->		</encoder>	</appender>			<!-- 异步输出 -->       <appender name ="RollingFile" class= "ch.qos.logback.classic.AsyncAppender">              <!-- 不丢失日志.默认的,如果队列的80%已满,则会丢弃TRACT、DEBUG、INFO级别的日志 -->              <discardingThreshold >0</discardingThreshold>              <!-- 更改默认的队列的深度,该值会影响性能.默认值为256 -->              <queueSize>2048</queueSize>              <!--               <IncludeCallerData>true</IncludeCallerData>              -->            <!-- 添加附加的appender,最多只能添加一个 -->           <appender-ref ref ="File"/>       </appender>	 <logger name="com.gy"   level="info" additivity="false">	   <appender-ref ref="RollingFile" />	</logger></configuration>